@model List<Domain.CustomerWishlistDomain>

@{
    ViewBag.Title = "CustomersWishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumb-main ">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-contain">
                    <div>
                        <h2> WishList Details</h2>
                        <ul>
                            <li><a href="index.html">home</a></li>
                            <li><i class="fa fa-angle-double-right"></i></li>
                            <li><a href="javascript:void(0)">Customer WishList</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- invoice start -->
<section class="invoice-four">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="invoice-popup">
                    <div>
                        <div class="table-responsive-md">
                            <div class="row print-bar">
                                <div class="col-md-12">
                                    <div class="printbar-right">
                                        <a id="exportpdf" href="@Url.Action("Index","Customer")" class="btn btn-solid btn-md ">
                                            <i class="fa fa-file"></i>
                                            Back
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <table class="invoice-table ">
                                <thead>
                                    <tr>
                                        <th>no.</th>
                                        <th>item detail</th>
                                        <th>amout</th>
                                        <th scope="col">availability</th>
                                        <th scope="col">action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        var srNO = i + 1;
                                        <tr>
                                            <td>@srNO</td>
                                            <td>
                                                <h3>
                                                    @Model[i].ITEM_DESC
                                                </h3>
                                            </td>
                                            <td>@Model[i].Amount</td>
                                            <td>
                                                <p>in stock</p>
                                            </td>
                                            <td>
                                                <a href="javascript:void(0)" onclick="fnDelete(@Model[i].Id)" class="icon me-3"><i class="ti-close"></i> </a>
                                                <a href="javascript:void(0)" class="cart"><i class="ti-shopping-cart"></i></a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- invoice end -->
<script src="~/Assets/JS/jquery-3.3.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

   
    });

    function fnDelete(id) {
        if (confirm('Are you sure you want to delete ?')) {
            alert(1);
            $.ajax({
                url: '/WishList/DeleteWishListItem',
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                data: '{wishListId: "' + id + '"}',
                success: function (response) {
                    if (response) {
                        $.notify({
                            icon: 'fa fa-check',
                            title: 'Success!',
                            message: 'Item deleted successfully..!!'
                        }, {
                            element: 'body',
                            position: null,
                            type: "success",
                            allow_dismiss: true,
                            newest_on_top: false,
                            showProgressbar: true,
                            placement: {
                                from: "top",
                                align: "right"
                            },
                            offset: 20,
                            spacing: 10,
                            z_index: 1031,
                            delay: 5000,
                            animate: {
                                enter: 'animated fadeInDown',
                                exit: 'animated fadeOutUp'
                            },
                            icon_type: 'class',
                            template: '<div data-notify="container" class="col-xs-11 col-sm-3 alert alert-{0}" role="alert">' +
                                '<button type="button" aria-hidden="true" class="btn-close" data-notify="dismiss"></button>' +
                                '<span data-notify="icon"></span> ' +
                                '<span data-notify="title">{1}</span> ' +
                                '<span data-notify="message">{2}</span>' +
                                '<div class="progress" data-notify="progressbar">' +
                                '<div class="progress-bar progress-bar-{0}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>' +
                                '</div>' +
                                '<a href="{3}" target="{4}" data-notify="url"></a>' +
                                '</div>'
                        });
                        window.location.reload();
                    }
                },

            });
        }
    }
</script>
