@model Domain.CustomerModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- breadcrumb start -->
<div class="breadcrumb-main ">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-contain">
                    <div>
                        <h2>login</h2>
                        <ul>
                            <li><a href="@Url.Action("Index","Menu")">home</a></li>
                            <li><i class="fa fa-angle-double-right"></i></li>
                            <li><a href="javascript:void(0)">login</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="login-page section-big-py-space b-g-light">
    <div class="custom-container">
        <div class="row">
            <div class="col-xl-4 col-lg-6 col-md-8 offset-xl-4 offset-lg-3 offset-md-2">
                <div class="theme-card">
                    <h3 class="text-center">Login</h3>
                    @using (Html.BeginForm("Login", "Customer", FormMethod.Post, new { @class = "theme-form", role = "form" }))
                    {
                        <div class="form-group">
                            <label for="email">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="review">Password</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "txtpwd" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-solid btn-md btn-block  " value="Login" id="btnSubmit" />
                        </div>

                    }
                    @if(@ViewBag.error!=null)
                    {
                        <h4 style="color:red;text-align:center;">@ViewBag.error</h4>
                    }
                    <p class="mt-3">Sign up for a free account at our store. Registration is quick and easy. It allows you to be able to order from our shop. To start shopping click register.</p>
                    <a href="@Url.Action("Register","Customer")" class="txt-default pt-3 d-block">Create an Account</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
